<% if fetch(:rails_env) %>
ENV["RAILS_ENV"] = "<%= fetch(:rails_env) %>"
<% else %>
ENV["RACK_ENV"] = "<%= fetch(:environment) %>"
<% end %>

shared_path = "<%= shared_path %>"
current_path = "<%= current_path %>"

Bluepill.application("pay-with-a-tweet", :log_file => "#{shared_path}/log/bluepill.log") do |app|

  app.working_dir = current_path
  app.uid = 'ubuntu'
  app.gid = 'www-data'
  app.process("unicorn") do |process|
    process.pid_file = "#{shared_path}/system/pids/unicorn.pid"

    process.start_command = "/home/ubuntu/.rvm/wrappers/default/bundle exec unicorn -c #{shared_path}/config/unicorn.rb -E <%= (fetch(:rails_env) || fetch(:environment)) %> -D"
    process.stop_command = "kill -QUIT {{PID}}"
    process.restart_command = "kill -USR2 {{PID}}"

    process.start_grace_time = 10.seconds
    process.stop_grace_time = 10.seconds
    process.restart_grace_time = 10.seconds

    process.monitor_children do |child_process|
      child_process.stop_command = "kill -9 {{PID}}"

      child_process.checks :mem_usage, :every => 30.seconds, :below => 500.megabytes, :times => [3,4], :fires => :stop
    end
  end

end